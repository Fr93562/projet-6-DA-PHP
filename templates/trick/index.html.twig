{% extends 'base.html.twig' %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section>
    <div id="entete">
        <div id="enteteLien">
            <div id="blocLien">
                <p> {{ home.contenu }}</p>
            </div>
        </div>
    </div>
</section>
<section>
	<div id="containerArticle">
		{% for	advert in listAdverts %}
        	<div class="contenairDiv">
            	<div class="imageContenairPost"></div>
				<article class="contenairPost">
                	<h4 class="titre">{{ advert.titre }}</h4>
                	<p class="contenu">{{ advert.texte[1:40] }}</p>
                	<p class="auteur"> {{ advert.dateCreation|date("m/d/Y")}} </p>
                	<p class="lien"><a class="customLien" href='/view/{{ advert.titre }} '>Lire la suite</a></p>
				</article>
			</div>
		{% endfor %}
    </div>
</section>

{% endblock %}
